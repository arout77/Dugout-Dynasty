{% extends "layouts/main.twig" %}

{% block content %}
<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
        
        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-4xl font-extrabold text-blue-900 tracking-tight">Season Hub</h1>
            <p class="mt-2 text-lg text-gray-600">{{ userTeam.team_name }}</p>
        </div>

        {% if nextGame %}
        <!-- NEXT GAME CARD -->
        <div class="bg-white shadow-xl rounded-lg overflow-hidden mb-12 border-t-4 border-blue-900">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <span class="text-sm font-bold text-gray-500 uppercase tracking-wider">Next Game</span>
                <span class="text-sm text-gray-600 font-medium">{{ nextGame.game_date|date("l, F j, Y") }}</span>
            </div>

            <div class="p-8">
                <div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-16">
                    
                    <!-- Home Team -->
                    <div class="text-center w-1/3">
                        <div class="text-sm text-indigo-500 uppercase font-bold mb-2">Home</div>
                        <div class="text-3xl font-black text-gray-900">{{ nextGame.home_team }}</div>
                        <div class="text-gray-500 mt-1">0-0</div>
                    </div>

                    <!-- VS -->
                    <div class="text-center">
                        <span class="text-4xl font-bold text-yellow-600 italic">VS</span>
                    </div>

                    <!-- Away Team -->
                    <div class="text-center w-1/3">
                        <div class="text-sm text-indigo-500 uppercase font-bold mb-2">Away</div>
                        <div class="text-3xl font-black text-gray-900">{{ nextGame.away_team }}</div>
                        <div class="text-gray-500 mt-1">0-0</div>
                    </div>

                </div>

                <div class="mt-10 flex justify-center gap-4">
                    <form action="{{ base_url }}/start-game" method="POST">
                        {{ csrf_field() }}
                        <input type="hidden" name="game_id" value="{{ nextGame.game_id }}">
                        <button type="submit" class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition transform hover:scale-105">
                            <svg class="-ml-1 mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                            Play Ball!
                        </button>
                    </form>
                    
                    <a href="{{ base_url }}/clubhouse" class="inline-flex items-center px-6 py-4 border border-gray-300 text-lg font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Manage Lineup
                    </a>
                </div>
            </div>
        </div>

        <!-- UPCOMING SCHEDULE -->
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Upcoming Schedule</h3>
            </div>
            <ul class="divide-y divide-gray-200">
                {% for game in upcoming %}
                <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="text-sm font-medium text-gray-600 w-24">
                                {{ game.game_date|date("M j") }}
                            </div>
                            <div class="ml-4">
                                <div class="text-sm text-gray-900">
                                    <span class="font-bold">{{ game.away_team }}</span> @ <span class="font-bold">{{ game.home_team }}</span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                Game {{ game.game_number }}
                            </span>
                        </div>
                    </div>
                </li>
                {% else %}
                <li class="px-4 py-4 text-gray-500 text-center italic">No upcoming games found.</li>
                {% endfor %}
            </ul>
        </div>

        {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow">
            <h3 class="text-xl font-medium text-gray-900">Season Complete!</h3>
            <p class="mt-2 text-gray-500">No scheduled games remaining.</p>
        </div>
        {% endif %}

    </div>
</div>
{% endblock %}