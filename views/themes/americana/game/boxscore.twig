{% extends "layouts/main.twig" %}

{% block content %}
<div class="container mx-auto max-w-5xl p-6">
    
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-indigo-500 dark:text-indigo-400 uppercase tracking-widest">Final Score</h1>
        <div class="flex justify-center items-center gap-8 mt-4">
            <div class="text-center">
                <div class="text-sm text-gray-400 font-bold uppercase">{{ game.away_name }}</div>
                <div class="text-6xl font-mono font-bold text-indigo-400">{{ game.away_score }}</div>
            </div>
            <div class="text-gray-600 text-4xl font-thin">-</div>
            <div class="text-center">
                <div class="text-sm text-gray-400 font-bold uppercase">{{ game.home_name }}</div>
                <div class="text-6xl font-mono font-bold text-indigo-400">{{ game.home_score }}</div>
            </div>
        </div>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden mb-8 border border-gray-700">
        <table class="w-full text-center text-sm">
            <thead class="bg-gray-900 text-gray-400 font-bold uppercase">
                <tr>
                    <th class="p-3 text-left">Team</th>
                    {% for i in 1..9 %}
                    <th class="w-10">{{ i }}</th>
                    {% endfor %}
                    <th class="w-12 bg-gray-800 text-white border-l border-gray-700">R</th>
                    <th class="w-12 bg-gray-800 text-white">H</th>
                    <th class="w-12 bg-gray-800 text-white">E</th>
                </tr>
            </thead>
            <tbody class="text-white">
                <tr class="border-b border-gray-700">
                    <td class="p-3 text-left font-bold">{{ game.away_name }}</td>
                    {% for i in 1..9 %}
                    <td class="text-gray-300">{{ lineScore.away[i] ?? 0 }}</td>
                    {% endfor %}
                    <td class="font-bold bg-gray-700/50 border-l border-gray-600">{{ game.away_score }}</td>
                    <td class="bg-gray-700/50">{{ game.away_hits }}</td>
                    <td class="bg-gray-700/50">{{ game.away_errors }}</td>
                </tr>
                <tr>
                    <td class="p-3 text-left font-bold">{{ game.home_name }}</td>
                    {% for i in 1..9 %}
                    <td class="text-gray-300">{{ lineScore.home[i] ?? 0 }}</td>
                    {% endfor %}
                    <td class="font-bold bg-gray-700/50 border-l border-gray-600">{{ game.home_score }}</td>
                    <td class="bg-gray-700/50">{{ game.home_hits }}</td>
                    <td class="bg-gray-700/50">{{ game.home_errors }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        {% include 'game/_team_box.twig' with {'team_name': game.away_name, 'team_id': game.away_team_id, 'hitters': hitters, 'pitchers': pitchers} %}

        {% include 'game/_team_box.twig' with {'team_name': game.home_name, 'team_id': game.home_team_id, 'hitters': hitters, 'pitchers': pitchers} %}

    </div>
    
    <div class="mt-8 text-center">
        <a href="{{ base_url }}/dashboard" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded shadow-lg transition">
            Return to Clubhouse
        </a>
    </div>
</div>
{% endblock %}