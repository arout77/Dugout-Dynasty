{% extends "layouts/main.twig" %}

{% block content %}
<div class="min-h-screen bg-gray-900 text-white font-sans p-6">
    <div class="container mx-auto max-w-6xl">
        
        <!-- Header -->
        <div class="flex justify-between items-center mb-8 border-b border-gray-700 pb-4">
            <div>
                <h1 class="text-3xl font-bold uppercase tracking-widest text-orange-500">Free Agency</h1>
                <p class="text-gray-400 text-sm">Cap Space: <span class="text-green-400">$??M</span> | Roster: {{ rosterCount }}/40</p>
            </div>
            <div class="flex gap-4">
                <a href="?type=hitters" class="px-4 py-2 rounded {{ type == 'hitters' ? 'bg-orange-600 text-white' : 'bg-gray-800 text-gray-400' }}">Hitters</a>
                <a href="?type=pitchers" class="px-4 py-2 rounded {{ type == 'pitchers' ? 'bg-orange-600 text-white' : 'bg-gray-800 text-gray-400' }}">Pitchers</a>
            </div>
        </div>

        <!-- Player List -->
        <div class="bg-gray-800 rounded-xl shadow-lg border border-gray-700 overflow-hidden">
            <table class="w-full text-sm text-left">
                <thead class="bg-gray-900 text-gray-400 uppercase font-bold">
                    <tr>
                        <th class="p-4">Name</th>
                        <th class="p-4">Year</th>
                        <th class="p-4">Stats</th>
                        <th class="p-4 text-right">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    {% for p in players %}
                    <tr class="hover:bg-white/5 transition">
                        <td class="p-4 font-bold text-white">{{ p.NAME }}</td>
                        <td class="p-4 text-gray-400">{{ p.Year ?? p.YR }}</td>
                        <td class="p-4 font-mono text-yellow-400">
                            {% if type == 'hitters' %}
                                AVG: {{ (p.H / (p.AB ?: 1))|number_format(3) }} | HR: {{ p.HR }}
                            {% else %}
                                W: {{ p.W }} | ERA: {{ (p.ER * 9 / (p.IP ?: 1))|number_format(2) }}
                            {% endif %}
                        </td>
                        <td class="p-4 text-right">
                            <form action="{{ base_url }}/free-agency/sign" method="POST">
                                {{ csrf_field() }}
                                <input type="hidden" name="player_id" value="{{ p.row_id }}">
                                <input type="hidden" name="type" value="{{ type == 'hitters' ? 'hitter' : 'pitcher' }}">
                                <button type="submit" class="bg-green-600 hover:bg-green-500 text-white px-4 py-1 rounded font-bold text-xs uppercase shadow">
                                    Sign
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center gap-4 mt-8">
            {% if page > 1 %}
                <a href="?type={{ type }}&page={{ page - 1 }}" class="px-4 py-2 bg-gray-700 rounded text-white">Previous</a>
            {% endif %}
            <a href="?type={{ type }}&page={{ page + 1 }}" class="px-4 py-2 bg-gray-700 rounded text-white">Next</a>
        </div>

    </div>
</div>
{% endblock %}