<div class="bg-gray-800 rounded-lg shadow-lg border border-gray-700">
    <div class="bg-gray-900 p-3 border-b border-gray-700 font-bold text-gray-300 uppercase">
        {{ team_name }}
    </div>
    
    <table class="w-full text-xs text-left">
        <thead class="text-gray-500 border-b border-gray-700">
            <tr>
                <th class="p-2">Batters</th>
                <th class="p-2 text-right">AB</th>
                <th class="p-2 text-right">R</th>
                <th class="p-2 text-right">H</th>
                <th class="p-2 text-right">RBI</th>
            </tr>
        </thead>
        <tbody class="text-gray-200">
            {% for p in hitters %}
                {% if p.team_id == team_id %}
                <tr class="border-b border-gray-700/50 hover:bg-white/5">
                    <td class="p-2">
                        <span class="font-bold">{{ p.player_name }}</span> 
                        <span class="text-gray-500 ml-1">{{ p.position }}</span>
                    </td>
                    <td class="p-2 text-right font-mono">{{ p.AB }}</td>
                    <td class="p-2 text-right font-mono">{{ p.R }}</td>
                    <td class="p-2 text-right font-mono font-bold">{{ p.H }}</td>
                    <td class="p-2 text-right font-mono">{{ p.RBI }}</td>
                </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>

    <div class="bg-gray-900 p-2 border-y border-gray-700 font-bold text-gray-400 text-xs uppercase mt-2">
        Pitching
    </div>
    <table class="w-full text-xs text-left">
        <thead class="text-gray-500 border-b border-gray-700">
            <tr>
                <th class="p-2">Pitchers</th>
                <th class="p-2 text-right">IP</th>
                <th class="p-2 text-right">H</th>
                <th class="p-2 text-right">R</th>
                <th class="p-2 text-right">K</th>
            </tr>
        </thead>
        <tbody class="text-gray-200">
            {% for p in pitchers %}
                {% if p.team_id == team_id %}
                <tr class="border-b border-gray-700/50 hover:bg-white/5">
                    <td class="p-2 font-bold">{{ p.player_name }}</td>
                    <td class="p-2 text-right font-mono">{{ p.IP }}</td>
                    <td class="p-2 text-right font-mono">{{ p.H }}</td>
                    <td class="p-2 text-right font-mono">{{ p.R }}</td>
                    <td class="p-2 text-right font-mono">{{ p.SO }}</td>
                </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
</div>